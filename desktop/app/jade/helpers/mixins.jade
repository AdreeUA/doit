mixin delimiter(blockName)
    if blockName
        = '\n'
        = '\n'
        != '<!--' + '~~~~~~~~~~~~~~~ ' + blockName.toUpperCase() + ' end ~~~~~~~~~~~~~~~~~' + '-->'
        = '\n'
    else
        = '\n'

mixin linksList(num, src, format)

    - var i = 1;

    while i <= num

        li.list__item(class!=attributes.item)
            a(href=jv0 class!=attributes.link)
                img(src=(src + '-#{i}.#{format}') alt='' class!=attributes.img)

        - i++

mixin conditionalComment(condition, content)

    | <!--[!{condition}]>!{content}<![endif]-->
